<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clase_Layouts.Views.StackLayoutPage"
             Title="StackLayoutPage">
    <ScrollView>
        <VerticalStackLayout Spacing="19">
            <Label
              Text="Rodrigo"
              FontSize="32"
              TextColor="GreenYellow"
              HorizontalOptions="Center"/>
            <Label 
              Text="Andrade"
              FontSize="24"
              TextColor="Blue"
              HorizontalOptions="Center" />
            <Label 
              Text="Jaramillo"
              FontSize="18"
              TextColor="Red"
              HorizontalOptions="Center" />
            <Button 
              x:Name="btnIrAFlex"
              Text="Ir a FlexLayout"
              Clicked= "btnIrAFlex_Clicked" BorderColor="AliceBlue"
              HorizontalOptions="Center"
              VerticalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>